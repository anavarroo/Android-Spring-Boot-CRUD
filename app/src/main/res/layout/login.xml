<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fondo6">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="465dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/fondoredondo3"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/ShieldGroup"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="@string/shieldgroup"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#486E88"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/inputUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#231D1D"
            android:layout_marginTop="70sp"/>

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#231D1D"
             />

        <TextView
            android:id="@+id/ComprobacionLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="15sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:backgroundTint="#486E88"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:onClick="onClick"
            android:text="LOGIN"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/signInWithGoogle"
                android:layout_width="310dp"
                android:layout_height="38dp"
                android:background="@drawable/rounded_background"
                android:text="Sign in with Google"
                android:textAlignment="center"
                android:textSize="18sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="29dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5sp"
                android:src="@drawable/iconogoogle" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
