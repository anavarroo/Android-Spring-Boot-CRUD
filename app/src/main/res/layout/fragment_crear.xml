<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2E0FF"
    android:gravity="center">

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="324dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:background="@drawable/fondoredondo2"
        android:padding="8dp"
        tools:context=".CrearFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingBottom="15sp"
            android:text="Crear Producto"
            android:textColor="#264961"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productNameEditText"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColor="#000000"
            android:textColorHint="#231D1D"
            android:minHeight="48dp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/productDescEditText"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="DescripciÃ³n"
            android:textColor="#000000"
            android:textColorHint="#231D1D"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/productImgEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#231D1D"
            android:hint="URL de la Imagen"
            android:minHeight="48dp"
            android:paddingBottom="20sp"/>

        <Button
            android:id="@+id/createProductButton"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#486E88"
            android:minHeight="48dp"
            android:text="Crear"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</RelativeLayout>
